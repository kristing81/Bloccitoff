<div class="container">
  <h3><%= @list.name %></h3>
  <div class='container'>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Description </th>
          <th>Days Left </th>
          <th>Complete </th>
        </tr>
      </thead>
        <% @todos.each do |todo| %>
      <tbody>
        <tr>
          <td width="150px"><%= todo.description %></td>
          <td width="150px"><%= distance_of_time_in_words_to_now(todo.expiry_date) %></td>
          <td width="150px"><%= link_to "Complete", complete_list_todo_path(@list,todo), method: :put, class: "btn btn-danger btn-xs" %></td>
        </tr>
        <% end %>
      </tbody>
   </table>
  </div>
  <%= link_to "Add another todo", new_list_todo_path(@list), class: "btn btn-success btn-sm" %>
  <%= link_to "Edit List", edit_list_path(@list), class: "btn btn-default btn-sm" %>
  <%= link_to "Delete List", list_path(@list), method: :delete, class: "btn btn-danger btn-sm", data: {confirm: 'Are you sure you want to delete this list?'} %>
  <%= link_to "Back to Lists", lists_path, class: "btn btn-info btn-sm" %>
</div>  

 