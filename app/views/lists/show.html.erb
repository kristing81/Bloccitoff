<h3><%= @list.name %></h3>
<div class='container'>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Description <span class="glyphicon glyphicon-list"></span></th>
        <th>Days Left <span class="glyphicon glyphicon-time"></span></th>
        <th>Complete <span class= "glyphicon glyphicon-check"></span></th>
      </tr>
    </thead>
      <% @todos.each do |todo| %>
    <tbody>
      <tr>
        <td width="150px"><%= todo.description %></td>
        <td width="150px"><%= distance_of_time_in_words_to_now(todo.expiry_date) %></td>
        <td width="150px"><%= link_to "Complete", complete_list_todo_path(@list,todo), method: :put %></td>
      </tr>
      <% end %>
    </tbody>
 </table>
</div>
<%= link_to "Add another todo", new_list_todo_path(@list), class: "btn btn-default" %>
<%= link_to "Delete List", list_path(@list), method: :delete, class: "btn btn-danger", data: {confirm: 'Are you sure you want to delete this list?'} %>


 