<!DOCTYPE html>
<html>
  <head>
    <title>Blocitoff</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <p><%= flash[:notice] if flash[:notice] %></p>
    <p><%= flash[:error] if flash[:error] %></p>

  <% if current_user %>
     Hello <%= current_user.email %>! <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
  <% else%>
     <%= link_to "Sign In", new_user_session_path, method: :get %> or 
     <%= link_to "Sign Up", new_user_registration_path, method: :get %>
  <% end %>

  <p><%= flash[:notice] if flash[:notice] %></p>
  <p><%= flash[:error] if flash[:error] %></p>


    <%= yield %>

  </body>
</html>
